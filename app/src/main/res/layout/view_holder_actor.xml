<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginEnd="@dimen/dp8">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imv_actor"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.ShapeImage"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txv_actor"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp6"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextViewNames"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imv_actor"
        app:layout_constraintStart_toStartOf="@id/imv_actor"
        app:layout_constraintTop_toBottomOf="@id/imv_actor"
        tools:text="@tools:sample/full_names" />

</androidx.constraintlayout.widget.ConstraintLayout>