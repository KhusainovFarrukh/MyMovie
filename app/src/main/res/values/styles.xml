<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="back_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="year_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="name_text">
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@color/ece</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="tagline_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="reviews_text">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="storyline_text">
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textColor">@color/ece</item>
    </style>

    <style name="about_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cast_text">
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textColor">@color/ece</item>
    </style>

    <style name="cast_names">
        <item name="android:textColor">@color/ece</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:textFontWeight" tools:targetApi="p">900</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>
</resources>